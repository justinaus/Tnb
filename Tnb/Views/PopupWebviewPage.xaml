<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tnb.PopupWebviewPage"
	 IsBusy="{Binding IsBusy}" xmlns:local="clr-namespace:Tnb">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" BackgroundColor="{x:Static local:ColorStruct.XamarinNavy}" HorizontalOptions="FillAndExpand">
			<StackLayout.Padding>
				<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
			</StackLayout.Padding>

			<ContentView x:Name="cv" VerticalOptions="FillAndExpand"
				Margin="0,0,0,-6">
			</ContentView>

			<StackLayout Orientation="Horizontal"
					HorizontalOptions="FillAndExpand" VerticalOptions="End" HeightRequest="38"
					BackgroundColor="{x:Static local:ColorStruct.XamarinNavy}">
				<Button x:Name="btnClose" Image="Images/WebView/webViewClose50.png" HorizontalOptions="FillAndExpand" 
					Margin="0,10,0,10"/>
                <Button x:Name="btnBack" Image="Images/WebView/webViewLeft50.png" HorizontalOptions="FillAndExpand" 
					Margin="0,10,0,10"/>
                <Button x:Name="btnForward" Image="Images/WebView/webViewRight50.png" HorizontalOptions="FillAndExpand" 
					Margin="0,10,0,10"/>
				<Button x:Name="btnRefresh" Image="Images/WebView/webViewRefresh50.png" HorizontalOptions="FillAndExpand" 
					Margin="0,10,0,10"/>
				<Button x:Name="btnWebBrowser" Image="Images/WebView/webViewWeb50.png" HorizontalOptions="FillAndExpand" 
					Margin="0,10,0,10"/>
            </StackLayout>

        </StackLayout>
	</ContentPage.Content>
</ContentPage>
